{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "ignorePatterns": ["public/**"],
    "rules": {
        "no-mixed-spaces-and-tabs": 0,
        "no-unused-vars": [2, {"args": "all", "argsIgnorePattern": "^_"}],
        "require-atomic-updates": 0
    },
    "env": {
        "node": true,
        "es6": true
    }
  }